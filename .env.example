# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=change-me-in-production

# Database Configuration (SQLite by default in development)
# DATABASE_URL=postgresql+psycopg://user:password@localhost:5432/coffee_admin

# Celery Configuration (defaults to in-memory if not set)
# For production use a real broker/backend like RabbitMQ or Redis
# CELERY_BROKER_URL=amqp://guest:guest@localhost:5672//
# CELERY_RESULT_BACKEND=rpc://

# Feature Flags
ENABLE_SSE=true
ENABLE_DEVICE_TOKEN=false

# Security
WTF_CSRF_ENABLED=true
WTF_CSRF_TIME_LIMIT=3600

# Pagination defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate limiting (defaults to in-memory if not set)
RATELIMIT_ENABLED=true
# RATELIMIT_STORAGE_URL=memory://

# File upload
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Logging
LOG_LEVEL=INFO